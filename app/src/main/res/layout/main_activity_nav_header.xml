<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_view_title_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/header_view_title"
        app:layout_constraintStart_toStartOf="@id/header_view_title"
        app:layout_constraintEnd_toEndOf="@id/header_view_title"
        android:layout_marginStart="10sp"

        android:text="@string/menu"
        android:gravity="center_horizontal"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/green_tennisTracker"

        android:paddingVertical="20dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"

        android:text="@string/menu"
        android:gravity="center_horizontal"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/text_dark"

        android:paddingVertical="20dp"
        />
    <View
        android:id="@+id/line_bold_separator_highlight"
        android:layout_width="0dp"
        android:layout_height="10dp"

        app:layout_constraintTop_toBottomOf="@id/header_view_title"
        app:layout_constraintStart_toStartOf="@id/line_bold_separator"
        app:layout_constraintEnd_toEndOf="@id/line_bold_separator"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="3dp"

        android:background="@drawable/line_bold_highlight"
        />
    <View
        android:id="@+id/line_bold_separator"
        android:layout_width="0dp"
        android:layout_height="10dp"

        app:layout_constraintTop_toBottomOf="@id/header_view_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"

        android:background="@drawable/line_bold_dark"
        />

</androidx.constraintlayout.widget.ConstraintLayout>