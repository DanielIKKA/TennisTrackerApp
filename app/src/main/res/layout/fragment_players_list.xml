<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragments.PlayersListFragment">

    <!-- Header -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/player_list_title_highlight"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:text="ALL PLAYERS"
        android:textAlignment="center"

        android:textColor="@color/green_tennisTracker"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/player_list_title"
        app:layout_constraintStart_toStartOf="@id/player_list_title"
        app:layout_constraintTop_toTopOf="@id/player_list_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/player_list_title"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"

        android:text="ALL PLAYERS"
        android:textAlignment="center"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/player_list_bar_highlight"
        android:layout_width="0dp"
        android:layout_height="10dp"

        android:layout_marginTop="2dp"
        android:background="@drawable/line_bold_highlight"
        app:layout_constraintEnd_toEndOf="@id/player_list_bar"
        app:layout_constraintStart_toStartOf="@id/player_list_bar"

        app:layout_constraintTop_toTopOf="@id/player_list_bar" />

    <View
        android:id="@+id/player_list_bar"
        android:layout_width="0dp"
        android:layout_height="10dp"

        android:layout_marginTop="30dp"
        android:background="@drawable/line_bold_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_list_title"

        app:layout_constraintWidth_percent="0.4" />

    <ListView
        android:id="@+id/players_list_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/player_list_bar_highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>