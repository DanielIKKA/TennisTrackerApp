<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_profile_height"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="10sp"
        android:scaleType="centerCrop"
        android:src="@drawable/roger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <View
        android:id="@+id/circle_dashed"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        app:layout_constraintDimensionRatio="1:1"

        android:background="@drawable/circle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/layout_wrapper_header_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/circle_dashed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:paddingHorizontal="10sp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header_name_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="2"
            android:text="@string/default_header_name"
            android:textSize="@dimen/text_title"
            android:textColor="@color/text_dark"
            android:textStyle="bold"

            android:layout_marginBottom="5dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_header_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/default_header_rank"
            android:textSize="@dimen/text_level_paragraph"
            android:textColor="@color/text_dark"

            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_header_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/default_header_age"
            android:textSize="@dimen/text_level_paragraph"
            android:textColor="@color/text_dark"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>